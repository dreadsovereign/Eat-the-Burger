<h1>Eat-Da-Burger!</h1>

<main>
  <div class="container">
    <div class="row">
      <div class="col s6">
        {{#each burgers}}
          {{#unless this.devoured}}
            <div>
              
                <button class='burgerAvailable' data-id={{this.id}}> {{this.burger_name}}</button>
              
            </div>
          {{/unless}}
        {{/each}}
      </div>

      <div class="col s6">
        {{#each burgers}}
          {{#if this.devoured}}
            <div class='burgerEaten'>
              <div>
                {{this.burger_name}}
              </div>
            </div>
          {{/if}}
        {{/each}}
      </div>
    </div>
  </div>
</main>

<h2>Add A Burger Option</h2>

<div class="row">
  <div class="col s12">
    
      <input type="text" id="name" name="burger_name" placeholder="Enter a Burger to eat">
      <button type="submit" class="addBurgerButton">Add The Burger</button>
    
  </div>
</div>
